<?php
/*
Plugin Name: Money Savvy UK Calculators Shortcode
Description: Adds a shortcode to embed Money Savvy UK calculators created in Streamlit.
Version: 1.0
Author: Money Savvy UK
*/

// Shortcode function to embed Streamlit calculators
function moneysavvyuk_calculators_shortcode() {
    $iframe_code = '<iframe src="https://your-app-link.streamlit.app" width="100%" height="700" frameborder="0" allowfullscreen></iframe>';
    return $iframe_code;
}

// Register the shortcode
add_shortcode('moneysavvyuk_calculators', 'moneysavvyuk_calculators_shortcode');
?>
